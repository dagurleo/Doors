@model DoorsSocialWeb.Models.ViewModels.SearchViewModel
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="usersFound">
        <ul>
            @foreach (var i in Model.usersSearched)
            {
                <li>
                    <a href="@Url.Action("Profile", "LoggedIn", new { id = i.Id })">
                        <div>
                            <div>
                                <img src="@i.displayImageUrl" alt="@i.displayName image" height="80px"/>
                            </div>
                            <div>
                                @i.displayName
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
        <div class="groupsFound">
            <ul>
                @foreach (var i in Model.groupsSearched)
                {
                    <a href="@Url.Action("GroupView", "LoggedIn", new { id = i.ID })">
                        <li>@i.groupName</li>
                    </a>
                }
            </ul>
        </div>
    </div>
</body>
</html>
