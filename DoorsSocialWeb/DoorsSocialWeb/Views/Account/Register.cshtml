@model DoorsSocialWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {

        @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" })
        @Html.TextBoxFor(m => m.displayName, new { placeholder = "Enter full name" })
        @Html.TextBoxFor(m => m.registerEmail, new { placeholder = "Email" })
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Repeat password" })


        <input type="submit" value="Register" />
        <div class="errors">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
        </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
